{
  "name": "@behemothjs/behemoth",
  "version": "0.2.0",
  "description": "Web Tool Kit",
  "repository": "https://github.com/behemothjs/behemoth",
  "homepage": "https://github.com/behemothjs/behemoth/blob/main/README.md",
  "private": false,
  "license": "MIT",
  "author": "Madaka Heri <madakaheri@icloud.com>",
  "keywords": [],
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "make": "node ./scripts/make/index.js",
    "build": "run-s -c build:*",
    "build:clean": "rimraf @types",
    "build:tsc": "tsc",
    "test": "run-s test:*",
    "test:lint": "xo",
    "test:unit": "c8 ava ./__tests__",
    "cov": "run-s test:unit cov:html cov:lcov cov:open",
    "cov:html": "c8 report --reporter=html",
    "cov:lcov": "c8 report --reporter=lcov",
    "cov:open": "open-cli coverage/index.html"
  },
  "devDependencies": {
    "ava": "^6.1.2",
    "c8": "^9.1.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "open-cli": "^8.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "xo": "^0.58.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "xo": {
    "rules": {
      "capitalized-comments": "off"
    }
  }
}