{
  "name": "@behemothjs/behemoth-core",
  "version": "0.0.1",
  "description": "Behemoth低レイヤーモジュールセット",
  "author": "Madaka Heri <madakaheri@icloud.com>",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/behemothjs/behemoth.git"
  },
  "bugs": {
    "url": "https://github.com/behemothjs/behemoth/issues"
  },
  "homepage": "https://github.com/behemothjs/behemoth/blob/main/packages/behemoth-core/README.md",
  "license": "MIT",
  "keywords": [],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "build": "run-s -c build:*",
    "build:clean": "rimraf @types",
    "build:tsc": "tsc",
    "test": "run-s test:*",
    "test:lint": "xo",
    "test:unit": "c8 ava",
    "cov": "run-s test:unit cov:html cov:lcov cov:open",
    "cov:html": "c8 report --reporter=html",
    "cov:lcov": "c8 report --reporter=lcov",
    "cov:open": "open-cli coverage/index.html"
  },
  "xo": {
    "ignores": [
      "coverage/**",
      "@types/**"
    ],
    "rules": {
      "capitalized-comments": "off"
    }
  }
}